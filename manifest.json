{
  "manifest_version": 3,
  "name": "Pomogus Timer",
  "version": "1.0",
  "description": "Helps you to focus and get things done!",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_icon": "icon.png",
    "default_title": "Pomogus Timer",
    "default_popup": "popup/popup.html"
  },
  "permissions": ["storage", "alarms", "notifications"],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options/options.html"
}
